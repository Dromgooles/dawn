{% comment %}
  CUSTOMIZED: Simple spacer section for adding vertical space
  Author: Dromgoole's
  Created: 2024

  A minimal section that adds configurable vertical space between sections.
{% endcomment %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    display: block !important;
    min-height: {{ section.settings.height_mobile }}px !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  #shopify-section-{{ section.id }} .dromgooles-spacer {
    display: block;
    height: {{ section.settings.height_mobile }}px;
    width: 100%;
    {%- if section.settings.show_background -%}
      background-color: rgb(var(--color-background));
    {%- endif -%}
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      min-height: {{ section.settings.height_desktop }}px !important;
    }
    #shopify-section-{{ section.id }} .dromgooles-spacer {
      height: {{ section.settings.height_desktop }}px;
    }
  }
{%- endstyle -%}

<div
  class="dromgooles-spacer{% if section.settings.show_background %} color-{{ section.settings.color_scheme }}{% endif %}"
  aria-hidden="true"
>
  &nbsp;
</div>

{% schema %}
{
  "name": "Spacer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "height_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Height on desktop",
      "default": 40
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Height on mobile",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "Show background color",
      "default": false,
      "info": "When enabled, uses the color scheme background"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}
