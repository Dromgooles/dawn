{% comment %}
  Dromgoole's Footer Section

  Fully block-based footer - add, remove, and reorder any column:
  - Brand block: Logo, tagline, contact info, store hours
  - Menu block: Navigation menu column
  - Newsletter block: Email signup with first/last name fields

  Author: Dromgoole's
  Created: 2025
  Dawn Version: 15.4.1
{% endcomment %}

{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .dromgooles-footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Grid layout - columns based on block count */
  .dromgooles-footer__columns {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__columns {
      grid-template-columns: repeat({{ section.blocks.size | default: 1 }}, 1fr);
      gap: 2rem;
    }

    /* Single column spans full width and uses multi-column layout */
    .dromgooles-footer__columns--single {
      grid-template-columns: 1fr;
    }

    .dromgooles-footer__columns--single .dromgooles-footer__column {
      column-count: 2;
      column-gap: 3rem;
    }

    .dromgooles-footer__columns--single .dromgooles-footer__menu ul,
    .dromgooles-footer__columns--single .dromgooles-footer__newsletter-form {
      break-inside: avoid;
    }
  }

  @media screen and (min-width: 990px) {
    .dromgooles-footer__columns--single .dromgooles-footer__column {
      column-count: 3;
    }
  }

  @media screen and (min-width: 990px) {
    .dromgooles-footer__columns {
      gap: 3rem;
    }
  }

  /* Column base styles */
  .dromgooles-footer__column {
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__column {
      text-align: left;
    }
  }

  .dromgooles-footer__column h2 {
    font-size: 1.6rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  /* Brand block styles */
  .dromgooles-footer__logo {
    margin-bottom: 1.5rem;
  }

  .dromgooles-footer__logo img {
    max-width: 100%;
    height: auto;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__logo {
      margin-left: 0;
      margin-right: auto;
    }
  }

  .dromgooles-footer__tagline {
    font-size: 1.4rem;
    line-height: 1.5;
    margin-bottom: 2rem;
  }

  .dromgooles-footer__contact {
    margin-bottom: 1.5rem;
  }

  .dromgooles-footer__contact-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    margin-bottom: 0.5rem;
    font-size: 1.4rem;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__contact-item {
      justify-content: flex-start;
    }
  }

  .dromgooles-footer__contact-item svg {
    width: 1.6rem;
    height: 1.6rem;
    flex-shrink: 0;
  }

  .dromgooles-footer__contact-item a {
    color: currentColor;
    text-decoration: none;
  }

  .dromgooles-footer__contact-item a:hover {
    text-decoration: underline;
  }

  .dromgooles-footer__hours-box {
    padding: 1.2rem 2rem;
    border-radius: 4px;
    font-size: 1.4rem;
    line-height: 1.6;
    text-align: center;
    margin-top: 1.5rem;
  }

  /* Menu block styles */
  .dromgooles-footer__menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__menu ul {
      column-count: 2;
      column-gap: 2rem;
    }
  }

  .dromgooles-footer__menu li {
    margin-bottom: 0.8rem;
    break-inside: avoid;
  }

  .dromgooles-footer__menu a {
    color: currentColor;
    text-decoration: none;
    font-size: 1.4rem;
  }

  .dromgooles-footer__menu a:hover {
    text-decoration: underline;
  }

  /* Newsletter block styles */
  .dromgooles-footer__newsletter-text {
    font-size: 1.4rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .dromgooles-footer__newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .dromgooles-footer__newsletter-form input[type="email"],
  .dromgooles-footer__newsletter-form input[type="text"] {
    width: 100%;
    padding: 1rem 1.2rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 4px;
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    font-size: 1.4rem;
  }

  .dromgooles-footer__newsletter-form input::placeholder {
    color: rgba(var(--color-foreground), 0.5);
  }

  .dromgooles-footer__name-fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .dromgooles-footer__newsletter-form button[type="submit"] {
    border: none;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-size: 1.4rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
    align-self: flex-start;
  }

  .dromgooles-footer__newsletter-form button[type="submit"]:hover {
    opacity: 0.9;
  }

  /* Bottom section */
  .dromgooles-footer__bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .dromgooles-footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .dromgooles-footer__copyright {
    font-size: 1.2rem;
    opacity: 0.7;
  }

  .dromgooles-footer__payment {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .dromgooles-footer__payment svg {
    height: 24px;
    width: auto;
  }
{%- endstyle -%}

<footer class="dromgooles-footer footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="dromgooles-footer__columns{% if section.blocks.size == 1 %} dromgooles-footer__columns--single{% endif %}">
        {%- for block in section.blocks -%}
          <div class="dromgooles-footer__column" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'brand' -%}
                {%- if block.settings.logo != blank -%}
                  <div class="dromgooles-footer__logo" style="max-width: {{ block.settings.logo_width }}px;">
                    <img
                      src="{{ block.settings.logo | image_url: width: 400 }}"
                      alt="{{ shop.name }}"
                      width="{{ block.settings.logo_width }}"
                      height="{{ block.settings.logo_width | divided_by: block.settings.logo.aspect_ratio }}"
                      loading="lazy"
                    >
                  </div>
                {%- elsif settings.logo != blank -%}
                  <div class="dromgooles-footer__logo" style="max-width: {{ block.settings.logo_width }}px;">
                    <img
                      src="{{ settings.logo | image_url: width: 400 }}"
                      alt="{{ shop.name }}"
                      width="{{ block.settings.logo_width }}"
                      height="{{ block.settings.logo_width | divided_by: settings.logo.aspect_ratio }}"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}

                {%- if block.settings.tagline != blank -%}
                  <p class="dromgooles-footer__tagline">{{ block.settings.tagline }}</p>
                {%- endif -%}

                <div class="dromgooles-footer__contact">
                  {%- if block.settings.phone != blank -%}
                    <div class="dromgooles-footer__contact-item">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                      </svg>
                      <a href="tel:{{ block.settings.phone | remove: ' ' | remove: '-' | remove: '.' | remove: '(' | remove: ')' }}">
                        {{- block.settings.phone -}}
                      </a>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.email != blank -%}
                    <div class="dromgooles-footer__contact-item">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                      </svg>
                      <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.address != blank -%}
                    <div class="dromgooles-footer__contact-item">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                      <span>{{ block.settings.address }}</span>
                    </div>
                  {%- endif -%}
                </div>

                {%- if block.settings.hours != blank -%}
                  <div
                    class="dromgooles-footer__hours-box"
                    style="background-color: {{ block.settings.hours_box_color }}; color: {{ block.settings.hours_box_text_color }};"
                  >
                    {{- block.settings.hours | strip | newline_to_br -}}
                  </div>
                {%- endif -%}

              {%- when 'menu' -%}
                <div class="dromgooles-footer__menu">
                  {%- if block.settings.heading != blank -%}
                    <h2>{{ block.settings.heading }}</h2>
                  {%- endif -%}
                  {%- if block.settings.menu != blank -%}
                    <ul>
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a href="{{ link.url }}">{{ link.title | escape }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>

              {%- when 'newsletter' -%}
                <div class="dromgooles-footer__newsletter">
                  {%- if block.settings.heading != blank -%}
                    <h2>{{ block.settings.heading }}</h2>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <p class="dromgooles-footer__newsletter-text">{{ block.settings.text }}</p>
                  {%- endif -%}

                  {%- form 'customer', id: 'DromgoolesFooterNewsletter', class: 'dromgooles-footer__newsletter-form' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">

                    <input
                      type="email"
                      name="contact[email]"
                      id="NewsletterEmail-{{ block.id }}"
                      placeholder="{{ block.settings.email_placeholder | default: 'Email' }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      required
                    >

                    {%- if block.settings.show_name_fields -%}
                      <div class="dromgooles-footer__name-fields">
                        <input
                          type="text"
                          name="contact[first_name]"
                          id="NewsletterFirstName-{{ block.id }}"
                          placeholder="{{ block.settings.first_name_placeholder | default: 'First Name' }}"
                          autocomplete="given-name"
                        >
                        <input
                          type="text"
                          name="contact[last_name]"
                          id="NewsletterLastName-{{ block.id }}"
                          placeholder="{{ block.settings.last_name_placeholder | default: 'Last Name' }}"
                          autocomplete="family-name"
                        >
                      </div>
                    {%- endif -%}

                    <button
                      type="submit"
                      style="background-color: {{ block.settings.button_color }}; color: {{ block.settings.button_text_color }};"
                    >
                      {{ block.settings.button_text | default: 'Submit' }}
                    </button>

                    {%- if form.errors -%}
                      <p class="form__message" role="alert">
                        {{ form.errors.translated_fields.email | capitalize }}
                        {{ form.errors.messages.email }}
                      </p>
                    {%- endif -%}

                    {%- if form.posted_successfully? -%}
                      <p class="form__message" role="status" tabindex="-1">
                        {{ 'newsletter.success' | t }}
                      </p>
                    {%- endif -%}
                  {%- endform -%}
                </div>
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="dromgooles-footer__bottom">
      <div class="dromgooles-footer__copyright">
        &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </div>

      {%- if section.settings.payment_enable -%}
        <div class="dromgooles-footer__payment">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer (Dromgoole's)",
  "class": "section-dromgooles-footer",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "brand",
      "name": "Brand info",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "Leave blank to use theme logo"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 300,
          "step": 10,
          "unit": "px",
          "label": "Logo width",
          "default": 200
        },
        {
          "type": "textarea",
          "id": "tagline",
          "label": "Tagline",
          "default": "A family owned business that's been putting ink on paper since 1961!"
        },
        {
          "type": "header",
          "content": "Contact information"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone number",
          "default": "713.526.4651"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email address",
          "default": "cs.dromgooles@gmail.com"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Address",
          "default": "2515 Rice Blvd. Houston, Tx. 77005"
        },
        {
          "type": "header",
          "content": "Store hours"
        },
        {
          "type": "textarea",
          "id": "hours",
          "label": "Store hours",
          "default": "8:30-5:30 M-F | 9-5 Saturday | Closed Sunday"
        },
        {
          "type": "color",
          "id": "hours_box_color",
          "label": "Hours box background",
          "default": "#c06014"
        },
        {
          "type": "color",
          "id": "hours_box_text_color",
          "label": "Hours box text color",
          "default": "#ffffff"
        }
      ]
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Stay up to date with new releases, promotions, events, and news with our newsletter and email updates."
        },
        {
          "type": "header",
          "content": "Form fields"
        },
        {
          "type": "text",
          "id": "email_placeholder",
          "label": "Email placeholder",
          "default": "Email"
        },
        {
          "type": "checkbox",
          "id": "show_name_fields",
          "label": "Show first/last name fields",
          "default": true
        },
        {
          "type": "text",
          "id": "first_name_placeholder",
          "label": "First name placeholder",
          "default": "First Name"
        },
        {
          "type": "text",
          "id": "last_name_placeholder",
          "label": "Last name placeholder",
          "default": "Last Name"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Submit"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button background",
