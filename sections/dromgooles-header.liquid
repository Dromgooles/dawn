            {%- when 'search' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-search', input_id: 'Search-In-Modal-Right' -%}
              </div>
            {%- when 'logo' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-logo' -%}
              </div>
            {%- when 'account' -%}
              <div {{ block.shopify_attributes }}>
