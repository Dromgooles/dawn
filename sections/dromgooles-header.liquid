      {%- for block in section.blocks -%}
        {%- if block.settings.position == 'center' -%}
          {%- case block.type -%}
            {%- when 'drawer' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-drawer' -%}
              </div>
            {%- when 'search' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-search', input_id: 'Search-In-Modal-Center' -%}
              </div>
            {%- when 'logo' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-logo' -%}
              </div>
            {%- when 'account' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-account' -%}
              </div>
            {%- when 'cart' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-cart' -%}
              </div>
          {%- endcase -%}
