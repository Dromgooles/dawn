            {%- when 'search' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-search', input_id: 'Search-In-Modal-Left' -%}
              </div>
            {%- when 'logo' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-logo' -%}
              </div>
            {%- when 'account' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-account' -%}
              </div>
            {%- when 'cart' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-cart' -%}
              </div>
          {%- endcase -%}
        {%- endif -%}
      {%- endfor -%}
    </div>

