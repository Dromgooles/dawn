      {%- for block in section.blocks -%}
        {%- if block.settings.position == 'right' -%}
          {%- case block.type -%}
            {%- when 'drawer' -%}
              <div {{ block.shopify_attributes }}>
                {%- render 'dromgooles-header-drawer' -%}
