{
  "sections": {
    "cart-items": {
      "type": "main-cart-items",
      "settings": { "color_scheme": "", "padding_top": 36, "padding_bottom": 36 }
    },
    "gift-wrapping": {
      "type": "dromgooles-cart-gift-wrapping",
      "settings": {
        "color_scheme": "scheme-1",
        "gift_wrapping_product_handle": "gift-wrapping",
        "gift_wrapping_label": "Add gift wrapping",
        "gift_wrapping_description": "Your items will be beautifully wrapped and ready to gift.",
        "show_gift_message": true,
        "gift_message_label": "Gift message (optional)",
        "gift_message_placeholder": "Enter your gift message here..."
      }
    },
    "cart-footer": {
      "type": "main-cart-footer",
      "blocks": {
        "subtotal": { "type": "subtotal", "settings": {} },
        "buttons": { "type": "buttons", "settings": {} }
      },
      "block_order": ["subtotal", "buttons"],
      "settings": { "color_scheme": "", "padding_top": 40, "padding_bottom": 40 }
    },
    "featured-collection": {
      "type": "featured-collection",
      "settings": {
        "collection": "new-arrivals",
        "products_to_show": 5,
        "title": "{{ section.settings.collection.title }}",
        "heading_size": "h2",
        "description": "",
        "show_description": false,
        "description_style": "body",
        "columns_desktop": 5,
        "enable_desktop_slider": false,
        "full_width": false,
        "show_view_all": true,
        "view_all_style": "solid",
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "quick_add": "none",
        "columns_mobile": "2",
        "swipe_on_mobile": false,
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": ["cart-items", "gift-wrapping", "cart-footer", "featured-collection"]
}
